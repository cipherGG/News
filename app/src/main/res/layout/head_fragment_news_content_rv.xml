<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative_head_fragment_news_content_rv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragment_news_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/vp_fragment_news_content"
        android:background="#77000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_fragment_news_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="title"
            android:textColor="#ffffff"
            android:textSize="16sp"/>

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/cpi_fragment_news_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dip"
            app:fillColor="#f00"
            app:pageColor="@android:color/darker_gray"
            app:radius="3dp"
            app:strokeWidth="0dp"/>
    </LinearLayout>
</RelativeLayout>
